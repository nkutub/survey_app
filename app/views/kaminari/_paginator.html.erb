<%= paginator.render do |paginator| %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if !current_page.first? %>
        <li class="page-item">
          <%= link_to "Previous", url_for(page: current_page.number - 1), class: "page-link" %>
        </li>
      <% end %>

      <% paginator.each_page do |page| %>
        <% if page.display_tag? %>
          <li class="page-item <%= 'active' if page.current? %>">
            <%= link_to page.number, url_for(page: page.number), class: "page-link" %>
          </li>
        <% elsif !page.was_truncated? %>
          <li class="page-item disabled">
            <span class="page-link">...</span>
          </li>
        <% end %>
      <% end %>

      <% if !current_page.last? %>
        <li class="page-item">
          <%= link_to "Next", url_for(page: current_page.number + 1), class: "page-link" %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %> 